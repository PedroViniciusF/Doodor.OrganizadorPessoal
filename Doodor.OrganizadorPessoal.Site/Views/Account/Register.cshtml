@model RegisterViewModel
@{
    ViewData["Title"] = "Registrar";
    Layout = "_LayoutAuth";
}

<div class="container" style="margin-top:60px;">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <div class="panel panel-info panel">
                <div class="panel-heading">
                    <h1 class="title text-center">Bem vindo !</h1>
                    <h2 class="page-subtitle text-center">Registre-se e agilize sua vida</h2>
                </div>
                <div class="panel-body pb">
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                        <vc:summary />
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="Nome" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="Nome" class="form-control" placeholder="Insira o Nome" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Cpf" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="Cpf" class="form-control" placeholder="Insira o CPF" />
                                    </div>
                                    <span asp-validation-for="Cpf" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="Email" class="form-control" placeholder="Insira o E-mail" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="Password" class="form-control" placeholder="Senha" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmação de senha" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                        <div class="form-group text-right">
                            <input type="submit" value="Registrar-se" class="btn btn-default mr-2" />
                            <a asp-action="Index" class="btn btn-light">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
